{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es6", "es7", "dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": false,
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": "./src",
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [ "./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
